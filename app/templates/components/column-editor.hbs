<tr>
  <th>
    #
  </th>
  {{#each table.columns as |column|}}
    <th>
      <span>
        {{column.name}}
      </span>
      <select type='select' class='form-control quarter-width inline-block push-sm-left'>
        <option value='1'>VarChar(255)</option>
        <option value='2'>Integer</option>
        <option value='3'>Association</option>
      </select>
      {{#bs-button onClick=(action "deleteColumn" column.id) type="danger push-sm-left"}}
        Delete
      {{/bs-button}}
    </th>
  {{/each}}
  <th>
    {{#bs-button type="primary" onClick=(action "addColumn")}}
      Add field
    {{/bs-button}}
  </th>
</tr>
