{{#each table.rows as |row index|}}
  <tr>
    <td>
      {{humanized-index index}}
    </td>
    {{#each table.columns as |column|}}
      <td>
        <input type='text' class='form-control' />
      </td>
    {{/each}}
    <td>
      {{#bs-button onClick=(action "deleteRow" row.id) type="danger"}}
        Delete
      {{/bs-button}}
    </td>
  </tr>
{{/each}}
<tr>
  <td>
    {{#bs-button type="primary" onClick=(action "addRow")}}
      Add row
    {{/bs-button}}
  </td>
  <td colspan=2></td>
</tr>
