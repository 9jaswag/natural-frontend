<h1>Projects</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |project|}}
      <tr>
        <td>
          {{project.name}}
        </td>
        <td>
          {{#link-to 'databases' project.id class='btn btn-primary'}}
            Databases
          {{/link-to}}
          {{#bs-button type="danger" onClick=(action "deleteProject" project.id) class='push-sm-left'}}
            Delete
          {{/bs-button}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div class='float-right'>
  {{#bs-button type="primary" onClick=(action "addProject")}}
    Add project
  {{/bs-button}}

  {{#link-to 'index' class='btn btn-secondary'}}
    Back
  {{/link-to}}
</div>
