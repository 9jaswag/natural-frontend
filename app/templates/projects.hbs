<div class='container push-down'>
  <h1>Projects</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |project|}}
        <tr>
          <td>
            {{project.name}}
          </td>
          <td>
            {{#link-to 'projects.project.databases' project.id class='btn btn-primary'}}
              Databases
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
