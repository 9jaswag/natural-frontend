<div class='container push-down'>
  <h1>Databases</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |database|}}
        <tr>
          <td>
            {{database.name}}
          </td>
          <td>
            {{#link-to 'tables' database.id class='btn btn-primary'}}
              Tables
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{#bs-button onClick=(action 'transitionBack') class='float-right'}}
    Back
  {{/bs-button}}
</div>
